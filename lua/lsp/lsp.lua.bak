-- lua/lsp/lsp.lua
vim.g.completeopt = "menu,menuone,noselect"

local cmp     = require("cmp")
local lspkind = require("lspkind")

cmp.setup({
  -- ðŸ‘‰ no automatic pop-up
  completion = { autocomplete = false },

  mapping = {
    ["<C-Space>"] = cmp.mapping.complete(),               -- open menu
    ["<CR>"]      = cmp.mapping.confirm({ select = false }), -- confirm *only* selected item
    ["<Tab>"]     = cmp.mapping(function(fallback)         -- navigation only
                      if cmp.visible() then
                        cmp.select_next_item()
                      else
                        fallback()
                      end
                    end, { "i", "s" }),
    ["<S-Tab>"]   = cmp.mapping(function()
                      if cmp.visible() then
                        cmp.select_prev_item()
                      end
                    end, { "i", "s" }),
    ["<C-e>"] = cmp.mapping.abort(),
    ["<C-f>"] = cmp.mapping.scroll_docs( 4),
    ["<C-d>"] = cmp.mapping.scroll_docs(-4),
  },

  snippet  = { expand = function(a) vim.fn["vsnip#anonymous"](a.body) end },
  sources  = {
    { name = "nvim_lsp" }, { name = "path" }, { name = "buffer" }, { name = "vsnip" },
  },
  formatting = {
    format = lspkind.cmp_format({ mode = "symbol_text", maxwidth = 50 }),
  },
})

